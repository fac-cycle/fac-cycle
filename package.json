{
  "name": "fac-cycle",
  "version": "1.0.0",
  "description": "Better Freecycle!",
  "main": "index.js",
  "scripts": {
    "test": "node test/tests.js",
    "lint": "node_modules/eslint/bin/eslint.js .",
    "travis": "npm run lint && npm test",
    "tdd": "nodemon test/tests.js",
    "commit": "git-cz",
    "coverage": "node ./node_modules/istanbul/lib/cli.js cover app.js",
    "codeclimate": "CODECLIMATE_REPO_TOKEN=fd0d83d3fa76e4eb63893d5b5d42dc9c08d09775184f48799e5760cfb9e5bf61 codeclimate-test-reporter < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fac-cycle/fac-cycle.git"
  },
  "keywords": [
    "freecycle",
    "fac",
    "react",
    "postgres",
    "node"
  ],
  "author": "FAC8",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fac-cycle/fac-cycle/issues"
  },
  "homepage": "https://github.com/fac-cycle/fac-cycle#readme",
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.3",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.4",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run travis && npm run coverage && npm run codeclimate",
      "commit-msg": "validate-commit-msg",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  }
}
